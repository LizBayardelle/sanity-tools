<div class="text-center tool-container">

	<div class="row">
	    <div class="col-sm-6">
	    	<h2>Pros</h2>
	    	<p>The Good Stuff</p>
	    	<form id="proForm" onkeypress="return event.keyCode != 13;">
	    		<input class="form-control text-left pro-con-input" id="proInput" placeholder="Add New Benefit" />
	    	<div onclick="addPro()" class="btn pro-con-btn">Add</div>
    		</form>
	    	<h3 class="text-left">Benefits</h3>
	    	<ul class="text-left" id="proList">
	    	</ul>
	    </div> <!-- pros -->

	    <div class="col-sm-6">
	    	<h2>Cons</h2>
	    	<p>The Bad Stuff</p>
	    	<form id="conForm" onkeypress="return event.keyCode != 13;">
		    	<input class="form-control text-left pro-con-input" placeholder="Add New Cost" id="conInput" />
	    	<div onclick="addCon()" class="btn pro-con-btn">Add</div>
	    	</form>
	    	<h3 class="text-left">Costs</h3>
	    	<ul class="text-left" id="conList">
	    	</ul>
	    </div> <!-- cons -->
	</div>

	<div class="row">
		<hr class="col-xs-6 col-xs-push-3">
	</div>

	<div class="row save-lists">
		<h2 class="text-center">Want to save your lists for later?</h2>
		<%= simple_form_for(@procon) do |f| %>
		  	<%= f.error_notification %>

		  	<div class="form-inputs text-left">
		  		<div class="form-group">
			    	<%= f.label "Create a Name for Your Lists" %>
			    	<%= f.text_field :name, class: "form-control" %>
		    	</div> <!-- form group -->
		    	<div class="form-group">
			    	<%= f.label :notes %>
			    	<%= f.text_area :notes, class: "form-control" %>
		    	</div> <!-- form group -->

		    	<%= f.input :proarray, id: "proArrayField" %>
		    	<%= f.input :conarray, id: "conArrayField" %>
		  	</div>

		  	<div class="form-actions">
		    	<%= f.button :submit, "Save Lists" %>
		  	</div>
		<% end %>
	</div> <!-- save lists row -->


</div> <!-- tool container -->

<script>
	var proArray = [];
	function addPro() {
		proArray.push(document.getElementById("proInput").value);
		document.getElementById("proForm").reset();
	  	for (var i = 0; i < proArray.length; i++) {
	       	newItem = "<li><p>" + proArray[i] + "</p></li>";
	  	}
       	document.getElementById("proList").innerHTML += newItem;
       	document.getElementById("procon_proarray").value = proArray;
	}

	var conArray = [];
	function addCon() {
		conArray.push(document.getElementById("conInput").value);
		document.getElementById("conForm").reset();
	  	for (var i = 0; i < conArray.length; i++) {
	       	newItem = "<li><p>" + conArray[i] + "</p></li>";
	  	}
       	document.getElementById("conList").innerHTML += newItem;
       	document.getElementById("procon_conarray").value = conArray;
	}
</script>







